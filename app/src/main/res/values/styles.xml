<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_teal_800</item>
        <item name="colorPrimaryDark">@color/color_teal_500</item>
        <item name="colorAccent">@color/color_orange_200</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ImageViewAuthorizationCenter">
        <item name="android:background">@drawable/bg_image_authorization_center</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ImageViewAuthorizationRight">
        <item name="android:background">@drawable/bg_image_authorization_right</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditTextManageActivity">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/dp_2</item>
        <item name="android:paddingRight">@dimen/dp_2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ImageViewManageActivity">
        <item name="android:background">@drawable/bg_image_manager</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextViewStatusPoll">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="ButtonActionManagerLink">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_teal_500</item>
    </style>


    <style name="ButtonInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_teal_500</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingLeft">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_margin">@dimen/dp_2</item>
    </style>

    <style name="TextViewPollInformation">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_black_700</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_8</item>
    </style>

    <style name="AppThemeButton">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@color/color_teal_500</item>
    </style>

    <style name="TextViewIntroduce">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="ImageViewIntroduce">
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
    </style>

    <style name="ImageViewItemVote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_150</item>
    </style>

    <style name="TitlePollTextView">
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_8</item>
    </style>

    <style name="ButtonActionPollResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:background">@color/color_teal_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="FPollCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/color_teal_600</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/dp_2</item>
        <item name="cardElevation">@dimen/dp_2</item>
    </style>

    <style name="FPollTextCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="FloatMenuTitleStyle">
        <item name="android:background">@drawable/bg_float_menu_title</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NavigationHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_place_holder</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_16</item>
    </style>

    <style name="TextViewProfileTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_shadow</item>
    </style>

    <style name="TextViewProfileSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/gray_shadow</item>
    </style>

    <style name="ImageProfileTitle">
        <item name="android:layout_width">@dimen/dp_45</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <style name="EditTextProfileTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_shadow</item>
    </style>

</resources>
